{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "paths": {
      "vue-hooks": [
        "./src/"
      ],
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "example/**/**.tsx",
    "example/**/**.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}